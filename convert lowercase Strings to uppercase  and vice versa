#include <iostream>
#include <cctype>

using namespace std;

int main() {
    string input;
    cout << "Enter a string: ";
    cin >> input;

    // Convert each character in the string to uppercase
    for (char &c : input) {
        c = toupper(c);
    }
    cout << "Uppercase: " << input << endl;

    // Convert each character in the string to lowercase
    for (char &c : input) {
        c = tolower(c);
    }
    cout << "Lowercase: " << input << endl;

    return 0;
}



Enter a string: Swati Yadav
Uppercase: SWATI
Lowercase: swati




